<h1>Admin Dashboard</h1>
<p>Manage users below:</p>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Admin Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.is_admin ? '✅ Yes' : '❌ No' %></td>
        <td>
          <% unless Current.user == user %> <!-- Prevent self-edit -->
            <%= button_to "Toggle Admin", 
                admin_toggle_admin_path(user), 
                method: :patch, 
                data: { confirm: "Are you sure you want to #{user.is_admin ? 'remove' : 'grant'} admin rights?" } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
