<div class="d-flex align-items-center justify-content-center">
    <h1>My_Basecamp</h1>

    <div>
        <% if @user %>
            Logged in as: <%= @user.email %>
        <% end %>
    </div>

    <!-- testing purposes - displays all user emails -->
    <% if @users %>
    <ul>
        <% @users.each do |userr| %>
        <li><%= userr.id %> - <%= userr.email %></li>
        <% end %>
    </ul>
    <% end %>

</div>