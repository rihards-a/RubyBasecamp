<h1> Change Password </h1>

<!-- rails feature for creating user input - form_with -->
<%= form_with model: Current.user, url: edit_password_path do |form| %>
    <!-- handles error messages for incorrect inputs -->
    <% if form.object.errors.any? %>
        <div class = "alert alert-danger">
            <% form.object.errors.full_messages.each do |message| %>
                <div> <%= message %> </div>
            <% end %>
        </div>
    <% end %>

    <div class="mb-3">
        <%= form.label :"new password" %>
        <%= form.password_field :password, class: "form-control", placeholder: "password123" %>
    </div>
    <div class="mb-3">
        <%= form.label :"new password_confirmation" %>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "password123" %>
    </div>

    <div class="mb-3">
        <%= form.submit "Update Password", class: "btn btn-primary" %>
    </div>
<% end %>