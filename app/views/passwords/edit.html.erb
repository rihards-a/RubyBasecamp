<div class="container d-flex justify-content-center">
  <div class="card shadow-sm mt-5 p-4" style="max-width: 450px; width: 100%; border-radius: 12px;">
    <div class="card-header bg-primary text-white text-center py-3" style="border-radius: 10px 10px 0 0;">
      <h2 class="mb-0">Change Password</h2>
    </div>

    <div class="card-body">
      <p class="text-muted text-center">Update your password securely.</p>

      <!-- Display Errors if any -->
      <% if Current.user.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% Current.user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Change Password Form -->
      <%= form_with model: Current.user, url: edit_password_path do |form| %>
        <div class="mb-3">
          <%= form.label :password, "New Password", class: "form-label fw-semibold" %>
          <%= form.password_field :password, class: "form-control", placeholder: "Enter new password" %>
        </div>

        <div class="mb-3">
          <%= form.label :password_confirmation, "Confirm New Password", class: "form-label fw-semibold" %>
          <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Re-enter new password" %>
        </div>

        <div class="d-grid">
          <%= form.submit "Update Password", class: "btn btn-primary fw-semibold btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
