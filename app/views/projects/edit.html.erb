<div class="container d-flex justify-content-center">
  <div class="card shadow-sm mt-5 p-4" style="max-width: 600px; width: 100%; border-radius: 12px;">
    <div class="card-header bg-primary text-white text-center py-3" style="border-top-left-radius: 12px; border-top-right-radius: 12px;">
      <h2 class="mb-0">Edit Project</h2>
    </div>

    <div class="card-body">
      <%= form_with model: @project, local: true do |form| %>
        
        <% if @project.errors.any? %>
          <div class="alert alert-danger">
            <h4 class="alert-heading">Please fix the following errors:</h4>
            <ul class="mb-0">
              <% @project.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Project Name -->
        <div class="mb-3">
          <%= form.label :name, class: "form-label fw-semibold" %>
          <%= form.text_field :name, class: "form-control", placeholder: "Project name" %>
        </div>

        <!-- Project Description -->
        <div class="mb-3">
          <%= form.label :description, class: "form-label fw-semibold" %>
          <%= form.text_area :description, class: "form-control", placeholder: "Project description", rows: 4 %>
        </div>

        <!-- Submit Button -->
        <div class="d-grid">
          <%= form.submit "Update Project", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
