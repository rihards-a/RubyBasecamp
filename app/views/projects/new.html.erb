<div class="card shadow-lg mt-4">
  <div class="card-header bg-primary text-white">
    <h1 class="mb-0">New Project</h1>
  </div>

  <div class="card-body">
    <%= form_with model: @project, local: true, class: "needs-validation" do |form| %>
      
      <div class="mb-3">
        <%= form.label :name, class: "form-label fw-bold" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter project name", required: true %>
      </div>

      <div class="mb-3">
        <%= form.label :description, class: "form-label fw-bold" %>
        <%= form.text_area :description, class: "form-control", placeholder: "Enter project description", rows: 3 %>
      </div>

      <div class="d-flex justify-content-between">
        <%= link_to "Cancel", projects_path, class: "btn btn-secondary" %>
        <%= form.submit "Create Project", class: "btn btn-primary" %>
      </div>
      
    <% end %>
  </div>
</div>
