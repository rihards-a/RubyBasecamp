<div class="card shadow-lg mt-4">
  <div class="card-header bg-primary text-white">
    <h1 class="mb-0"><%= @project.name %></h1>
  </div>
  
  <div class="card-body">
    <p class="text-muted">Created by: <strong><%= @project.user.email %></strong></p>
    
    <% if @project.description.present? %>
      <p class="mt-3"><%= @project.description %></p>
    <% end %>

    <h4 class="mt-3">Members</h4>
    <ul class="list-group">
      <% @project.project_memberships.each do |membership| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span><%= membership.user.email %></span>
          <span class="badge bg-info text-dark"><%= membership.role.to_s.titleize %></span>
        </li>
      <% end %>
    </ul>
    
    <div class="mt-4 d-flex justify-content-between">
      <%= link_to "Back to Projects", projects_path, class: "btn btn-secondary" %>
      
      <%= button_to "Delete Project", @project, 
        method: :delete, 
        data: { confirm: "Are you sure you want to delete this project?" }, 
        class: "btn btn-danger" %>
    </div>
  </div>
</div>
