<div class="card shadow-lg mt-4">
  <div class="card-header bg-primary text-white">
    <h1 class="mb-0">Sign In</h1>
  </div>

  <div class="card-body">
    <p class="lead">Welcome back! Please enter your credentials to continue.</p>

    <%= form_with url: sign_in_path do |form| %>

      <!-- Email Field -->
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.text_field :email, class: "form-control", placeholder: "your@email.here" %>
      </div>

      <!-- Password Field -->
      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control", placeholder: "password123" %>
        <div class="mt-2">
          <%= link_to "Forgot your password?", password_reset_path, class: "text-decoration-none" %>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="d-grid">
        <%= form.submit "Sign In", class: "btn btn-primary btn-lg" %>
      </div>

    <% end %>
  </div>
</div>
