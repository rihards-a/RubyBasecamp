<div class="card shadow-lg mt-4">
  <div class="card-header bg-primary text-white">
    <h1 class="mb-0">Sign Up</h1>
  </div>

  <div class="card-body">
    <p class="lead">Create an account to start managing your projects.</p>

    <%= form_with model: @user, url: sign_up_path do |form| %>
      
      <!-- Error Messages -->
      <% if form.object.errors.any? %>
        <div class="alert alert-danger">
          <h4 class="alert-heading">Errors:</h4>
          <ul class="mb-0">
            <% form.object.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Email Field -->
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.text_field :email, class: "form-control", placeholder: "your@email.here" %>
      </div>

      <!-- Password Field -->
      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control", placeholder: "password123" %>
      </div>

      <!-- Password Confirmation -->
      <div class="mb-3">
        <%= form.label :password_confirmation, "Confirm Password", class: "form-label" %>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "password123" %>
      </div>

      <!-- Submit Button -->
      <div class="d-grid">
        <%= form.submit "Create Account", class: "btn btn-primary btn-lg" %>
      </div>

    <% end %>
  </div>
</div>
